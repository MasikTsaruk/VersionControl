{% extends 'base.html.twig' %}

{% block title %}Get {{app.name}}{% endblock %}
{% block body %}
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>UUID</th>
            <th>Name</th>
            <th>Last Version</th>
        </tr>
    </thead>
    <tbody>
        {% for env in app.envs %}
        <tr>
            <td>{{ env.uuid }}</td>
            <td><b>{{ env.name }}</b></td>
            <td>
            {{ env.versions|last.version }}
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>


{% endblock %}