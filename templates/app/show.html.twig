{% block title %}App{% endblock %}

{% block body %}
    <h1>App</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ app.id }}</td>
            </tr>
            <tr>
                <th>Uuid</th>
                <td>{{ app.uuid }}</td>
            </tr>
